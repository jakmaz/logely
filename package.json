{
  "name": "logely",
  "version": "0.1.3",
  "author": "Jakub Mazur",
  "description": "Logging middleware for Bun's Elysia web framework",
  "keywords": [
    "logging",
    "elysia",
    "elysiajs",
    "web",
    "logger",
    "middleware"
  ],
  "homepage": "https://github.com/jakmaz/logely#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jakmaz/logely.git"
  },
  "bugs": {
    "url": "https://github.com/jakmaz/logely/issues"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "module": "src/index.ts",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && bun build src/index.ts --outdir dist --target bun -e elysia && tsc",
    "test": "bun run --watch tests/server.ts",
    "prepublishOnly": "bun run build && { echo '/*'; cat LICENSE; echo '*/'; cat dist/index.js; } > /tmp/index.js && mv /tmp/index.js dist/index.js"
  },
  "devDependencies": {
    "bun-types": "^1.1.15",
    "elysia": "^1.1.3",
    "typescript": "^5.0.0",
    "rimraf": "^5.0.5"
  },
  "peerDependencies": {
    "typescript": "^5.0.0",
    "elysia": "^1.1.3"
  },
  "dependencies": {
    "picocolors": "^1.0.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
