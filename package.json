{
  "name": "@jakmaz/logely",
  "version": "0.1.0",
  "description": "Logging middleware for Bun's Elysia web framework",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "default": "./dist/index.js"
  },
  "files": [
    "dist/index.js",
    "dist/index.d.ts"
  ],
  "scripts": {
    "build": "rm -rf dist && bun build src/index.ts --outdir ./dist --target bun --minify --external elysia && tsc",
    "test": "bun run --watch tests/server.ts"
  },
  "keywords": [
    "logging",
    "elysia",
    "elysiajs",
    "web",
    "logger",
    "middleware"
  ],
  "author": "Jakub Mazur",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jakmaz/logely.git"
  },
  "bugs": {
    "url": "https://github.com/jakmaz/logely/issues"
  },
  "homepage": "https://github.com/jakmaz/logely#readme",
  "devDependencies": {
    "bun-types": "^1.1.15",
    "elysia": "^1.0.24",
    "typescript": "^5.5.2"
  },
  "peerDependencies": {
    "typescript": "^5.5.2",
    "elysia": "^1.0.0-rc.11"
  },
  "dependencies": {
    "picocolors": "^1.0.1"
  }
}
